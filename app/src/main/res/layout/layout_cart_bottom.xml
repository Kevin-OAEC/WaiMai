<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_cart"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#484D54"
            android:gravity="center_vertical|right"
            android:paddingEnd="30dp"
            android:text="购物车是空的"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sel_cart_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="20起送"
            android:textColor="@drawable/sel_cart_text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_cart"
        android:scaleType="centerCrop"
        android:padding="7dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/iv_cart"
        android:layout_alignRight="@id/iv_cart"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_dot"
        android:textSize="12sp"/>


</RelativeLayout>